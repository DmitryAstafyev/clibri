{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "ESNEXT",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNEXT.BigInt",
      "ESNEXT",
      "DOM"
    ],
    "paths": {
      "implementation/*": ["src/producer/implementation/*"],
      "producer/*": ["src/producer/*"]
    }
  },
  "files": [
    "src/index.ts",
  ]
}