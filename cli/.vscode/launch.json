    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'fiber'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fiber",
                    "--package=fiber"
                ],
                "filter": {
                    "name": "fiber",
                    "kind": "bin"
                }
            },
            "args": [
                "-s",
                "/storage/projects/private/fiber/environment/protocol/prot/protocol.prot",
                "-rs",
                "/storage/projects/private/fiber/environment/protocol/prot/protocol.rs",
                "-o",
                "-wf",
                "/storage/projects/private/fiber/environment/protocol/prot/protocol.workflow"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'fiber'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=fiber",
                    "--package=fiber"
                ],
                "filter": {
                    "name": "fiber",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}